<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.12"
        android:background="@drawable/radiaus"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:src="@drawable/arrow_back"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logo"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:id="@+id/levelnum"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hints"
            android:id="@+id/hints"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            />
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/viewpage"
        android:layout_height="200dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear"
        android:gravity="center"
        android:layout_weight="1">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/corners"
            app:backgroundTint="@color/black"
            android:id="@+id/ans_btn"
            android:layout_marginStart="60dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/corners"
            app:backgroundTint="@color/black"
            android:id="@+id/ans_btn1"
            android:layout_marginStart="20dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/corners"
            app:backgroundTint="@color/black"
            android:id="@+id/ans_btn2"
            android:layout_marginStart="20dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/corners"
            app:backgroundTint="@color/black"
            android:id="@+id/ans_btn3"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/radius"
            app:backgroundTint="#148E19"
            android:text="Use Hints"
            android:id="@+id/logo_hints"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/cancel_btn"
            android:src="@drawable/cancel"
            android:layout_marginStart="20dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/remove"
            android:id="@+id/remove_btn"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:id="@+id/button0"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="15dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/button1"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/button2"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/button3"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/button4"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/button5"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/button6"
                android:layout_marginStart="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:id="@+id/button7"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="15dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:id="@+id/button8"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:id="@+id/button9"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:id="@+id/button10"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:id="@+id/button11"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:id="@+id/button12"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginStart="5dp"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corners"
                app:backgroundTint="#988F8F"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/button13"
                android:layout_marginStart="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>